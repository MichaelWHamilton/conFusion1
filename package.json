{
  "name": "confusion",
  "version": "1.0.0",
  "description": "This is a website for Ristorante Con Fusion",
  "main": "index.html",
  "scripts": {
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lite": "lite-server",
    "scss": "sass css/styles.scss css/styles.css",
    "watch:scss": "onchange \"css/*.scss\" -- npm run scss",
    "watch:all": "npm-run-all --parallel watch:scss lite",
    "clean": "rimraf dist",
    "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* dist/fonts",
    "imagemin": "imagemin img/* --out-dir=\"dist/img\"",
    "usemin": "usemin index.html -d dist --htmlmin -o dist/index.html && usemin contactus.html -d dist --htmlmin -o dist/contactus.html && usemin aboutus.html -d dist --htmlmin -o dist/aboutus.html",
    "build": "npm run clean && npm run imagemin && npm run copyfonts && npm run usemin"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "css-min": "^1.0.0",
    "grunt": "^1.6.1",
    "grunt-browser-sync": "^2.2.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-sass": "^4.0.0",
    "html-minifier": "^4.0.0",
    "imagemin": "^9.0.0",
    "imagemin-cli": "^8.0.0",
    "jit-grunt": "^0.10.0",
    "lite-server": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^3.3.0",
    "parallelshell": "^3.0.2",
    "rimraf": "^6.0.1",
    "sass": "^1.85.1",
    "time-grunt": "^1.4.0",
    "uglify-js": "^3.19.3",
    "usemin-cli": "^0.6.0"
  },
  "dependencies": {
    "bootstrap": "^4.0.0",
    "bootstrap-social": "^5.1.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "popper.js": "^1.12.9"
  }
}
